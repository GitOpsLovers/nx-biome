{
  "name": "nx-biome",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "main": "plugin/src/index.ts",
        "tsConfig": "plugin/tsconfig.lib.json",
        "assets": [
          "plugin/*.md",
          {
            "input": "./plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./plugin",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {},
    "test": {}
  },
  "tags": []
}
